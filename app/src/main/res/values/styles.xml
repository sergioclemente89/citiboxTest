<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@android:color/white</item>
    </style>


    <style name="Text" />

    <style name="Text.Toolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.PostTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.PostBody">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text.PostAuthor">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/author_color</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="Text.CommentTitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.CommentBody">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text.CommentAuthor">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
